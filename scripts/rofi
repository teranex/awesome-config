#!/bin/bash

if [ $# -eq 0 ]
then
    show='combi'
else
    show=$1
fi

PATH=$PATH:`dirname $0`

ROFI_FONT="hack 12"

case $(hostname -s) in
    alondra)
        ROFI_FONT="hack 20"
        ;;
esac

# PATH=$PATH:`dirname $0`
cat ~/bashmarks | rofi \
    -show $show \
    -show-icons \
    -modi combi,calc,file-browser \
    -combi-modi window,drun \
    -matching fuzzy \
    -hide-scrollbar true \
    -columns 2 \
    -show-icons \
    -file-browser-theme elementary-xfce-dark \
    -file-browser-disable-mode-keys \
    -file-browser-depth 3 \
    -file-browser-oc-cmd "/home/jeroen/.config/awesome/scripts/ranger;icon:terminal;name:Ranger" \
    -file-browser-oc-cmd "thunar;icon:system-file-manager;name:Thunar" \
    -file-browser-oc-cmd "/home/jeroen/.config/awesome/scripts/terminator;icon:terminator;name:Terminator" \
    -file-browser-oc-cmd "gvim;icon:gvim;name:Gvim" \
    -file-browser-dir / \
    -font "$ROFI_FONT"
    # -file-browser-oc-search-path
    # -file-browser-stdin \

    # -combi-modi window,drun,hamster:rofi-hamster,vimwiki:rofi-vimwiki,vim:rofi-vim \
    # -combi-modi media:rofi-mediaplayers,window,drun,hamster:rofi-hamster,vimwiki:rofi-vimwiki,vim:rofi-vim \
    # -sidebar-mode \
    # -modi combi,vimwiki:rofi-vimwiki,ssh \
    # -modi combi,window,drun,ssh,vimwiki:rofi-vimwiki \
    # -combi-modi media:rofi-mediaplayers,window,drun,vim:rofi-vim,vimwiki:rofi-vimwiki \
